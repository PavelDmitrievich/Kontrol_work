<!DOCTYPE html>
<html>
  <head>
    <title>PhotoGalaryApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body >
  <nav id="top_nav" class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>

		<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav">
				<a class="navbar-brand" href="/">Foto Gallery</a>			</ul>
				<ul class="navbar-nav navbar-right">
					<% if user_signed_in? %>
						<p class="navbar-text">
							Hello, <%= link_to current_user.name, edit_user_registration_path(current_user), class: 'navbar-link' %>
						</p>
						<ul class="nav navbar-nav">
							<% if current_user.admin? %>
								<li>
									<li><%= link_to 'Go to ADMIN', admin_dashboard_path %></li>
								</li>
							<% end %>

							<li>
								<li><%= link_to 'My profile', user_path(current_user) %></li>
							</li>

							<li>
								<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
							</li>
						</ul>
						<% else %>
						<%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary navbar-btn' %> |
						<%= link_to 'Log in', new_user_session_path, class: 'btn btn-primary navbar-btn' %>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<%= yield %>
	</div>

  </body>
</html>
